<%= flash[:notice] %>

<h3 class="bg-light">商品詳細</h3>

<%= image_tag @item.get_image, size:'100x100' %>

<div>
  <label>商品名</label>
  <%= @item.name %>
</div>

<div>
  <label>商品説明</label>
  <%= @item.introduction %>
</div>

<div>
  <label>ジャンル</label>
  <%= @item.genre.name %>
</div>

<div>
  <label>
    税込価格<br>
    (税抜価格)
  </label>
  <%= @item.with_tax_price %> (<%= @item.price %>)円
</div>

<div>
  <label>販売ステータス</label>
  <%= @sell_statuses %>
</div>


<%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>