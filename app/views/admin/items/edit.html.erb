<div class="container">
  <div class="row">
    <h3 class="col-lg-auto bg-light text-center">商品編集</h3>
  </div>

  <%= render 'layouts/errors', obj: @item %>

  <div class="row justify-content-lg-center">
    <div class="col-lg-8">

      <form>
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

        <div class="form-group row">
          <label class="col-sm-4 col-form-label">商品画像</label>
          <div class="col-sm-8">
            <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-4 col-form-label">商品名</label>
          <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-4 col-form-label">商品説明</label>
          <div class="col-sm-8">
            <%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-4 col-form-label">ジャンル</label>
          <div class="col-sm-8">
            <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, { selected: @item.genre_id.to_i }) %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-4 col-form-label">税抜き価格</label>
          <div class="col-sm-7">
            <%= f.text_field :price, class: "form-control", placeholder: "1000" %>
          </div>
          <div class="col-sm-1">円</div>
        </div>

        <div class="form-group row">
          <label class="col-sm-4 col-form-label">販売ステータス</label>
          <div class="col-sm-8">
            <%= f.radio_button :sell_status, Item.sell_statuses.key(1) %>
            <%= f.label :sell_status, Item.sell_statuses_i18n[:now_on_sale] %>
            <%= f.radio_button :sell_status, Item.sell_statuses.key(0) %>
            <%= f.label :sell_status, Item.sell_statuses_i18n[:sold_out] %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>

      <% end %>
      </form>

    </div>
  </div>

</div>