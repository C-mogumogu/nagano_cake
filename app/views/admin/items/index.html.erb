<div class="container">
  <div class="row">
    <h3 class="col-lg-auto bg-light text-center">商品一覧</h3>
  </div>

　<div class="row justify-content-end">
    <%= link_to new_admin_item_path do %>
      <i class="fas fa-plus-circle fa-2x" style="color: #000000;"></i>
    <% end %>
  </div>

  <div class="row justify-content-lg-center">
    <table class="table table-hover table-inverse">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price.to_s(:delimited, delimiter: ',') %></td>
          <td><%= item.genre.name %></td>
          <td class="font-weight-bold">
            <% if item.sell_status_i18n == "販売中" %>
              <div class="text-success"><%= "販売中" %></div>
            <% else %>
              <div class="text-muted"><%= "売り切れ" %></div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>

</div>