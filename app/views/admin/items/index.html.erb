<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <h3 class="bg-light">商品一覧</h3>

      <table class="table table-hover table-inverse">

        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>

          <% @items.each do |item| %>
          <tr>

            <td><%= item.id %></td>

            <td><%= link_to item.name, admin_item_path(item.id) %></td>

            <td><%= item.price %></td>

            <td><%= item.genre.name %></td>

            <td class="sell_status"><%= item.sell_status_i18n %></td>

          </tr>
          <% end %>

        </tbody>

      </table>

      <%= paginate @items %>

    </div>
  </div>
</div>

<script>
  $(function(){
  $('.sell_status').each(function(){
    const sell_status = $(this).css({
    'color': '#32cd32'
    });
  });
});
</script>