<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h3 class="bg-light">商品新規登録</h3>
      
      <%= render 'layouts/errors', obj: @item %>
      
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
      
        <div class="form-group">
          <%= f.label :商品画像 %>
          <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
        </div>
        
        <div class="form-group">
          <%= f.label :商品名 %>
          <%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
        </div>
        
        <div class="form-group">
          <%= f.label :商品説明 %>
          <%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します" %>
        </div>
        
        <div class="form-group">
          <%= f.label :ジャンル %>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: "--選択してください--" } %>
        </div>
        
        <div class="form-group">
          <%= f.label :税抜価格 %>
          <%= f.text_field :price, class: "form-control", placeholder: "1000" %>
        </div>
        
        <div class="form-group">
          <%= f.label :販売ステータス %>
          <%= f.radio_button :sell_status, Item.sell_statuses.key(1) %>
          <%= f.label :sell_status, Item.sell_statuses_i18n[:now_on_sale] %>
       
          <%= f.radio_button :sell_status, Item.sell_statuses.key(0) %>
          <%= f.label :sell_status, Item.sell_statuses_i18n[:sold_out] %>
        </div>
          
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      
      <% end %>
      
    </div>
  </div>
</div>