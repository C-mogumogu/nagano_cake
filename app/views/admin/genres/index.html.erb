<h3 class="bg-light">ジャンル一覧・追加</h3>
  <p>ジャンル名<p>
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <%= f.text_field :name, placeholder: "ジャンル名" %>
    <%= f.submit '新規登録', class: "btn btn-sm btn-success" %>
  <% end %>

<table class="table table-hover tabke-inverse">

  <thead class="thead-light">
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
  </tbody>

</table>