<%= flash[:notice] %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">

    <h3 class="bg-light">ジャンル一覧・追加</h3>
    
    
      <p>ジャンル名<p>
    
      <%= render 'layouts/errors', obj: @genre %>
      
    
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>

    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
  
      <table class="table table-hover tabke-inverse">
    
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
    
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
    
      </table>
  
    </div>
  </div>
</div>  