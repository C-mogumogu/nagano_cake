<h3>ジャンル一覧・追加</h3>
  <p>ジャンル名<p>
  <%= form_with model: @genre do |f| %>
    <%= f.text_field :name, placeholder: "ジャンル名" %>
    <%= f.submit '新規登録', class: "btn btn-sm btn-success" %>
  <% end %>
  
<table class="table table-hover tabke-inverse">

  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
      </tr>
    <% end %>
  </tbody>

</table>