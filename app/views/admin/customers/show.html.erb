<h3><%= @customer.family_name %><%= @customer.first_name %>さんの会員詳細</h3>

<div>
  <%= flash[:notice] %>
</div>

<table>
  <tr>
    <td>会員ID　</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名　</td>
    <td><%= @customer.family_name %>　<%= @customer.first_name %></td>
  </tr>
  <tr>
    <td>フリガナ　</td>
    <td><%= @customer.family_name_kana %>　<%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号　</td>
    <td><%= @customer.post_code %></td>
  </tr>
  <tr>
    <td>住所　</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号　</td>
    <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス　</td>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <td>会員ステータス　</td>
    <td class="font-weight-bold">
      <% if @customer.is_deleted == false %>
        <div class="text-success"><%= "有効" %></div>
      <% else %>
        <div class="text-muted"><%= "無効" %></div>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>　</td>
    <td>
      <div class="btn btn-success">
        <%= link_to "編集する", edit_admin_customer_path(@customer), class: 'text-light text-decoration-none' %>
      </div>
      <div class="btn btn-primary">
        <%= link_to "注文履歴一覧を見る", admin_root_path, class: 'text-light text-decoration-none' %>
      </div>
    </td>
  </tr>
</table>

