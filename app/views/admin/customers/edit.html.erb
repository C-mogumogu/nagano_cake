<div class="container">
  <div class="row">
    <h3 class="col-lg-auto bg-light text-center"><%= @customer.family_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= render "layouts/errors", obj: @customer %>

    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">会員ID</div>
        <div class="col-3 col-form-label"><%= @customer.id %></div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">氏名</div>
        <div class="col-8">
          <%= f.text_field :family_name %>
          <%= f.text_field :first_name %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">フリガナ</div>
        <div class="col-8">
          <%= f.text_field :family_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">郵便番号</div>
        <div class="col-3"><%= f.text_field :post_code %></div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">住所</div>
        <div class="col-8"><%= f.text_field :address,size: 60 %></div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">電話番号</div>
        <div class="col-3"><%= f.telephone_field :phone_number %></div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">メールアドレス</div>
        <div class="col-3"><%= f.email_field :email %></div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">会員ステータス</div>
        <div class="col-3">
          <%= f.radio_button :is_deleted, "false" %>
          <%= f.label :is_deleted_false, "有効" %>
          <%= f.radio_button :is_deleted, "true" %>
          <%= f.label :is_deleted_false, "退会済み" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label"></div>
        <div class="col-3"><%= f.submit "変更を保存", class: 'btn btn-success' %></div>
      </div>
    <% end %>
    </div>
  </div>

  </div>