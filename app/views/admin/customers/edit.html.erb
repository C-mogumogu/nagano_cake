<h3><%= @customer.family_name %><%= @customer.first_name %>さんの会員情報編集</h3>

<%= render "layouts/errors", obj: @customer %>

<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>

<table>
  <tr>
    <td>氏名</td>
    <td>
      <%= f.text_field :family_name %>
      <%= f.text_field :first_name %>
      </td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td>
      <%= f.text_field :family_name_kana %>
      <%= f.text_field :first_name_kana %>
    </td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= f.text_field :post_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address,size: 60 %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= f.telephone_field :phone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= f.email_field :email %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td>
      <%= f.radio_button :is_deleted, "false" %>
      <%= f.label :is_deleted_false, "有効" %>
      <%= f.radio_button :is_deleted, "true" %>
      <%= f.label :is_deleted_false, "無効" %>
    </td>
  </tr>
  <tr>
    <td></td>
    <td><%= f.submit "変更を保存", class: 'btn btn-success' %></td>
  </tr>
</table>
<% end %>
