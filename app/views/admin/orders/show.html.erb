<div class="container">
   <h3 class="bg-light">注文履歴詳細</h3>
   <div class="row">
     <table>
       <tr>
         <th>購入者</th>
         <td>
           <%= link_to admin_customer_path(@order.customer_id) do %>
           <%= @order.customer.family_name + @order.customer.first_name %>
           <% end %>
         </td>
       </tr>
       <tr>
         <th>注文日</th>
         <td><%= @order.created_at.strftime('%Y/%m/%d')%></td>
       </tr>
       <tr>
         <th>配送先</th>
         <td>
          <%= '〒' + ' ' + @order.post_code %>
          <%= @order.address %><br>
          <%= @order.name %>
         </td>
       </tr>
       <tr>
         <th>支払方法</th>
         <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
       </tr>
       <tr>
         <th>注文ステータス</th>
         <td>
           <%=form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
           <%= f.select :status, Order.statuses_i18n.invert %>
           <%=f.submit '更新', class:"btn btn-success"%>
           <% end %>
         </td>
       </tr>
     </table>
   </div>
   <div class="row">
     <div class="col-8">
      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.price %></td>
            <td><%= order_item.amount %></td>
            <td><%= order_item.subtotal %></td>
            <td>
              <%= form_with model: order_item, url: order_items_path(order_item), local: true, method: :patch do |f| %>
              <%= f.select :making_status, OrderItem.making_statuses_i18n.invert %>
              <%=f.submit '更新', class:"btn btn-success" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
     </div>
     <div class="col-3">
       <table>
         <tr>
           <th>商品合計</th>
           <td><%= number_to_currency(@order.total_price,unit: "¥", strip_insignificant_zeros: true) %></td>
         </tr>
         <tr>
           <th>送料</th>
           <td><%= number_to_currency(@order.postage,unit: "¥", strip_insignificant_zeros: true) %></td>
         </tr>
         <tr>
           <th>請求額合計</th>
           <td><%= number_to_currency(@order.postage.to_i + @order.total_price.to_i,unit: "¥", strip_insignificant_zeros: true) %></td>
         </tr>
       </table>
     </div>
   </div>
</div>