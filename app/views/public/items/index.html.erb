<div class="container">
  <div class="row">

    <div class="col-md-2">
      <%= render 'layouts/sidebar', genres: @genres %>
    </div>

    <div class='col-md-10'>
      <div class="title">
        <p><span>商品一覧</span>(全<%=@items.count %>件）</p>
      </div>
      <div class="card-deck">
        <% @items.each do |item| %>
          <div class="col-md-3">
            <div class="card h-100">
              <%= image_tag item.get_image %>
              <div class="card-body">
                <h5 class="card-title"><%= link_to item.name, item %></h5>
                <p class="card-text">¥<%= item.price %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>