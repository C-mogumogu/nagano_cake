<h3 class="bg-light">配送先編集</h3>

<%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>

  <%= f.hidden_field :customer_id, :value => current_customer.id %>

  <div class="form-group">
    <%= f.label :郵便番号（ハイフンなし）%>
    <%= f.text_field :post_code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :宛名 %>
    <%= f.text_field :name, class: "form-control", placeholder: "令和道子" %>
  </div>

  <div class="form-group">
    <%= f.submit '変更内容を保存', class: "btn btn-success" %>
  </div>

<% end %>