<div class="container">

  <div class="row">
    <h3 class="col-2 bg-light text-center">配送先編集</h3>
  </div>

  <div class="row">
    <div class="col-lg-12">

      <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>

        <%= f.hidden_field :customer_id, :value => current_customer.id %>

          <div class="form-group row">
            <label for="post_code" class="col-sm-3 col-form-label">郵便番号（ハイフンなし）</label>
              <div class="col-sm-3">
                <%= f.text_field :post_code, class: "form-control" %>
              </div>
          </div>

          <div class="form-group row">
            <label for="address" class="col-sm-3 col-form-label">住所</label>
              <div class="col-sm-6">
                <%= f.text_field :address, class: "form-control" %>
              </div>
          </div>

          <div class="form-group row">
            <label for="name" class="col-sm-3 col-form-label">宛名</label>
              <div class="col-sm-3">
                <%= f.text_field :name, class: "form-control" %>
              </div>
          </div>

          <div class="row">
            <div class=" col-9 form-group text-right">
              <%= f.submit '変更内容を保存', class: "btn btn-success" %>
            </div>
          </div>

      <% end %>

    </div>
  </div>
</div>