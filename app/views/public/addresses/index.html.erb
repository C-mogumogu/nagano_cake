<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <h3 class="bg-light">配送先登録/一覧</h3>

      <%= render 'layouts/errors', obj: @address %>

        <%= form_with model: @address, url: addresses_path, mothod: :post do |f| %>

          <%= f.hidden_field :customer_id, :value => current_customer.id %>

          <div class="form-group row">
            <label for="post_code" class="col-sm-3 col-form-label">郵便番号（ハイフンなし）</label>
              <div class="col-sm-3">
                <%= f.text_field :post_code, class: "form-control", placeholder: "0000000" %>
              </div>
          </div>

          <div class="form-group row">
            <label for="address" class="col-sm-3 col-form-label">住所</label>
              <div class="col-sm-6">
                <%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
              </div>
          </div>

          <div class="form-group row">
            <label for="name" class="col-sm-3 col-form-label">宛名</label>
              <div class="col-sm-3">
                <%= f.text_field :name, class: "form-control", placeholder: "令和道子" %>
              </div>
          </div>

          <div class="form-group text-right">
            <%= f.submit '新規登録', class: "btn btn-success" %>
          </div>

        <% end %>


      <table class="table table-bordered border-dark">

        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @addresses.each do |address| %>
            <tr>

              <td><%= address.post_code %></td>

              <td><%= address.address %></td>

              <td><%= address.name %></td>

              <td>
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-sm btn-danger" %>
              </td>

            </tr>
          <% end %>
        </tbody>

      </table>

    </div>
  </div>
</div>