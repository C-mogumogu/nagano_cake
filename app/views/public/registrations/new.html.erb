<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    名前
    <%= f.label :（姓）%>
    <%= f.text_field :family_name, placeholder: "令和", autofocus: true, autocomplete: "family-name" %>

    <%= f.label :（名）%>
    <%= f.text_field :first_name, placeholder: "道子" , autofocus: true, autocomplete: "given-name" %>
  </div>

  <div class="field">
    フリガナ
    <%= f.label :（セイ） %>
    <%= f.text_field :family_name_kana, placeholder: "レイワ" %>

    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :post_code, placeholder: "0000000", autofocus: true, autocomplete: "tel" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address,size: 60, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.telephone_field :phone_number, placeholder: "00000000000", autofocus: true, autocomplete: "tel-national" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（6文字以上） %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
