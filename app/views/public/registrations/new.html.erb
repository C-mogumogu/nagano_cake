<div class="container">
  <div class="row">
    <h3 class="col-lg-auto bg-light text-center">新規会員登録</h3>
  </div>

  <div class="row justify-content-lg-center">
    <div class="col-lg-12">
    <%= render "public/shared/error_messages", resource: resource %>
    <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>

    　<div class="form-group row">
        <label for="full_name" class="col-sm-2 col-form-label">氏名</label>
        <label for="kanji_sei">&emsp;&emsp;（姓）&emsp;</label>
        <div class="col-3">
          <%= f.text_field :family_name, placeholder: "令和", autofocus: true, autocomplete: "family-name", class: "form-control form-control-sm border-dark" %>
        </div>
        <label for="kanji_mei">（名）&emsp;</label>
        <div class="col-3">
          <%= f.text_field :first_name, placeholder: "道子" , autofocus: true, autocomplete: "given-name", class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="full_name_kana" class="col-sm-2 col-form-label">フリガナ</label>
        <label for="kana_sei">&emsp;&emsp;（セイ）</label>
        <div class="col-3">
          <%= f.text_field :family_name_kana, placeholder: "レイワ", class: "form-control form-control-sm border-dark" %>
        </div>
        <label for="kana_mei">（メイ）</label>
        <div class="col-3">
          <%= f.text_field :first_name_kana, placeholder: "ミチコ", class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
        <div class="col-3">
          <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="post_code" class="col-sm-3 col-form-label">郵便番号（ハイフンなし）</label>
        <div class="col-3">
          <%= f.text_field :post_code, placeholder: "0000000", autofocus: true, autocomplete: "tel", class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="address" class="col-sm-3 col-form-label">住所</label>
        <div class="col-8">
          <%= f.text_field :address,size: 55, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="phone_number" class="col-sm-3 col-form-label">電話番号（ハイフンなし）</label>
        <div class="col-3">
          <%= f.telephone_field :phone_number, placeholder: "00000000000", autofocus: true, autocomplete: "tel-national", class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="phone_number" class="col-sm-3 col-form-label">パスワード（6文字以上）</label>
        <div class="col-3">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="phone_number" class="col-sm-3 col-form-label">パスワード（確認用）</label>
        <div class="col-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm border-dark" %>
        </div>
      </div>



    <div class="row justify-content-center">
      <div class=" col-lg-4 col-md-offset-5 form-group text-center">
        <%= f.submit "　新規登録　", class:"btn btn-success" %>
      </div>
    </div>

    <% end %>
  </div>
</div>

  <%= render "public/shared/links" %>
</div>