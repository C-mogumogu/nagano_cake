<div class="container">

  <div class="row">
    <h3 class="col-lg-3 col-md-4 col-sm-4 bg-light text-center">マイページ</h3>
  </div>

  <div class="row">
    <label for="staticEmail" class="col-sm-2  col-form-label"><h4>登録情報</h4></label>
    <div class="col-sm-10">
      <%= link_to "編集する", edit_customer_path, class: 'btn btn-success' %>
    </div>
  </div>
      

<div class="row">
  <div class="col-8">
<table class="table table-bordered">
  <tr>
    <td class="col-4 bg-light">氏名</td>
    <td><%= @customer.family_name %>　<%= @customer.first_name %></td>
  </tr>
  <tr>
    <td class="col-4 bg-light">カナ</td>
    <td><%= @customer.family_name_kana %>　<%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <td class="col-4 bg-light">郵便番号</td>
    <td><%= @customer.post_code %></td>
  </tr>
  <tr>
    <td class="col-4 bg-light">住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td class="col-4 bg-light">電話番号</td>
    <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <td class="col-4 bg-light">メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
</table>
  </div>
</div>

<div class="row">
  <label for="staticEmail" class="col-sm-2  col-form-label"><h4>配送先</h4></label>
  <div class="col-sm-10">
    <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary' %>
  </div>
</div>

<div class="row">
  <label for="staticEmail" class="col-sm-2  col-form-label"><h4>注文履歴</h4></label>
  <div class="col-sm-10">
    <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %>
  </div>
</div>