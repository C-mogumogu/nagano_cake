<div class="container">

  <div class="row">
    <h3 class="col-3 bg-light text-center">会員情報編集</h3>
  </div>

  <div class="row">
    <div class="col-lg-12">

      <%= render "layouts/errors", obj: @customer %>

      <%= form_wi/div model: @customer do |f| %>

      <div class="form-group row">
        <label for="full_name" class="col-sm-2 col-form-label">氏名</label>
        <div class="col-3">
          <%= f.text_field :family_name, class: "form-control form-control-sm border-dark" %>
        </div>
        <div class="col-3">
          <%= f.text_field :first_name, class: "form-control form-control-sm border-dark"  %>
        </div>
      </div>

      <div class="form-group row">
        <label for="full_name_kana" class="col-sm-2 col-form-label">フリガナ</label>
        <div class="col-3">
          <%= f.text_field :family_name_kana, class: "form-control form-control-sm border-dark" %>
        </div>
        <div class="col-3">
          <%= f.text_field :first_name_kana, class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="post_code" class="col-sm-2 col-form-label">郵便番号</label>
        <div class="col-3">
          <%= f.text_field :post_code, class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="address" class="col-sm-2 col-form-label">住所</label>
        <div class="col-8">
          <%= f.text_field :address, class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="phone_number" class="col-sm-2 col-form-label">電話番号</label>
        <div class="col-3">
          <%= f.telephone_field :phone_number, class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">メールアドレス</label>
        <div class="col-3">
          <%= f.email_field :email, class: "form-control form-control-sm border-dark" %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <div class="d-grid gap-2 d-md-block text-center">
            <%= f.submit "編集内容を保存", class: 'btn btn-success col-3' %>
            <%= link_to "退会する", customer_confirm_deleted_pa/div, class: 'btn btn-danger col-2 offset-1' %>
          </div>
        </div>
      </div>

      <% end %>

    </div>

  </div>
</div>

