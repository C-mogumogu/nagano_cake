<h2>会員情報編集</h2>

<%= form_with model: @customer do |f| %>
  <%#<%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group">
    名前
    <%= f.text_field :family_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-group">
    フリガナ
    <%= f.text_field :family_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="form-group">
    <%= f.label :郵便番号 %>
    <%= f.text_field :post_code %>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address,size: 60 %>
  </div>

  <div class="form-group">
    <%= f.label :電話番号 %>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
  </div>

  <div class="btn">
    <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
  </div>
  <div class="btn btn-danger">
    <%= link_to "退会する", customer_confirm_deleted_path, class: 'text-light' %>
  </div>
  
<% end %>
