<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col-5">
      <h4>注文情報</h4>
      <table>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d')%></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= '〒' + ' ' + @order.post_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-3">
      <h4>請求情報</h4>
      <table>
         <tr>
          <th>商品合計</th>
          <td><%= number_to_currency(@order.total_price,unit: "¥", strip_insignificant_zeros: true) %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= number_to_currency(@order.postage,unit: "¥", strip_insignificant_zeros: true) %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= number_to_currency(@order.postage.to_i + @order.total_price.to_i,unit: "¥", strip_insignificant_zeros: true) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <h4>注文内容</h4>
      <table>
        <thead>
          <th>商品</th>
          <th>単価</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.price %></td>
            <td><%= order_item.amount %></td>
            <td><%= order_item.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
