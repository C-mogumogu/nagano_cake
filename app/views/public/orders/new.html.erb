<h2>注文情報入力</h2>
<%=form_with model: @order, url: {controller: 'orders', action: 'confirm' } do |f| %>
<h3>支払方法</h3>
  <div calss="form-group">
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
  </div>
  <div class="form-group">
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
  </div>
<h3>お届け先</h3>
  <div class="form-group">
    <%= f.radio_button :select_address, "0" %>
    <%= f.label :"ご自身の住所"%><br>
    <%= '〒' + current_customer.post_code + ' ' + current_customer.address %><br>
    <%= current_customer.family_name + current_customer.first_name %>
  </div>


  <div class="form-group">
    <%= f.radio_button :select_address, "1" %>
    <%= f.label :"登録済み住所から選択" %><br>
    <%= f.select :address_id, options_from_collection_for_select(@addresses, :id, :address_display) %>
  </div>

  <div class="form-group">
    <%= f.radio_button :select_address, "2" %>
    <%= f.label :"新しいお届け先" %>
    <div>
      <%= f.label :郵便番号（ハイフンなし）%>
      <%= f.text_field :post_code, class: "form-control" %>
    </div>
    <div>
      <%= f.label :住所 %>
      <%= f.text_field :address, class: "form-control" %>
    </div>
    <div>
      <%= f.label :宛名 %>
      <%= f.text_field :name, class: "form-control", placeholder: "令和道子" %>
    </div>
  </div>

<%= f.submit "確認画面へ進む", calss:"btn btn-primary" %>
<% end %>
