<div class="container">
  <h2>注文情報確認</h2>
  <div class="row">
    <div class="col-8">
      <table>
        <thead>
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image %>
              <%= cart_item.item.name %>
            </td>
            <td><%= number_to_currency(cart_item.item.with_tax_price, strip_insignificant_zeros: true) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= number_to_currency(cart_item.subtotal, strip_insignificant_zeros: true) %></td>
          <% end %>
        </tbody>
      </table>
      <div><span>支払い方法</span><%= @order.payment_method %></div>
      <div>
        <span>お届け先</span>
        <%= @order.post_code + @order.address %><br>
        <%= @order.name %>
      </div>
    </div>
    <div class="col-4">
      <table>
        <tr>
          <th>送料</th>
          <th><%= number_to_currency(@order.postage,trip_insignificant_zeros: true) %></th>
        </tr>
        <tr>
          <th>合計</th>
          <th><%= number_to_currency(@total_price, strip_insignificant_zeros: true) %></th>
        </tr>
        <tr>
          <th>請求</th>
          <th><%= number_to_currency(@order.postage.to_i + @total_price.to_i, strip_insignificant_zeros: true) %></th>
        </tr>
      </table>
    </div>
  </div>
</div>