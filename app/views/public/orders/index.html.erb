<div class="container">

  <div class="row">
    <h3 class="col-lg-3 col-md-4 col-sm-4 bg-light text-center">注文履歴一覧</h3>
  </div>

  <div class="row">
    <table class="col-12 table table-bordered border-dark">
      <thead class="thead-light">
        <th>注文日</th>
        <th class="col-4">配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d')%></td>
          <td><%= '〒' + ' ' + order.post_code %><br>
              <%= order.address %><br>
              <%= order.name %>
          </td>
          <td>
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name%>
              <br>
            <% end %>
          </td>
          <td><%= order.total_price %></td>
          <td><%= order.status_i18n %></td>
          <td><%=link_to "表示する", order_path(order), class:"btn btn-primary" %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>